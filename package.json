{
  "name": "otak-zen",
  "displayName": "otak-zen",
  "description": "It has been passed down since ancient times in Japan. Let's experience the Zen spirit with VSCode.",
  "publisher": "odangoo",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/tsuyoshi-otake/otak-zen"
  },
  "bugs": {
    "url": "https://github.com/tsuyoshi-otake/otak-zen/issues"
  },
  "homepage": "https://github.com/tsuyoshi-otake/otak-zen#readme",
  "version": "1.0.2",
  "engines": {
    "vscode": "^1.90.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "otak-zen.toggleZen",
        "title": "Toggle Zen Mode"
      }
    ],
    "configuration": {
      "title": "OtakZen",
      "properties": {
        "otakZen.smallCreatureCount": {
          "type": "number",
          "default": 35,
          "minimum": 1,
          "maximum": 100,
          "description": "小さな生き物の数"
        },
        "otakZen.koiCount": {
          "type": "number",
          "default": 7,
          "minimum": 1,
          "maximum": 20,
          "description": "錦鯉の数"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run postcompile",
    "compile": "tsc -p ./",
    "postcompile": "if not exist out mkdir out && copy src\\zen.html out\\",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.90.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "files": [
    "out",
    "src/zen.html",
    "images",
    "LICENSE"
  ]
}
